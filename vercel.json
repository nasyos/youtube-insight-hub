{
  "rewrites": [
    { "source": "/((?!api/).*)", "destination": "/index.html" }
  ],
  "functions": {
    "api/**/*.ts": {
      "includeFiles": "services/**/*",
      "maxDuration": 60
    }
  },
  "crons": [
    {
      "path": "/api/youtube/poll",
      "schedule": "0 */6 * * *"
    },
    {
      "path": "/api/youtube/jobs/process",
      "schedule": "0 * * * *"
    }
  ]
}